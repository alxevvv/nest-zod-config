{
  "name": "nest-zod-config",
  "version": "0.0.0-development",
  "description": "Define NestJS configuration with validation and type safety using zod",
  "keywords": [
    "config",
    "configuration",
    "nest",
    "NestJS",
    "validation",
    "zod"
  ],
  "bugs": {
    "url": "https://github.com/alxevvv/nest-zod-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alxevvv/nest-zod-config"
  },
  "license": "MIT",
  "author": "alxevvv <alxevvv@gmail.com>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf dist && tsc --project tsconfig.build.json",
    "cz": "git-cz",
    "format": "prettier \"{lib,tests}/**/*.ts\" --check",
    "format:fix": "prettier \"{lib,tests}/**/*.ts\" --write",
    "lint": "eslint \"{lib,tests}/**/*.ts\"",
    "lint:fix": "eslint \"{lib,tests}/**/*.ts\" --fix",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*": "prettier --write --ignore-unknown"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "extends": [
      "@sanity/semantic-release-preset"
    ]
  },
  "dependencies": {
    "config-loaders": "^0.3.0",
    "lodash.merge": "^4.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@nestjs/common": "^10.0.5",
    "@nestjs/platform-express": "^10.0.5",
    "@nestjs/testing": "^10.0.5",
    "@sanity/semantic-release-preset": "^4.1.1",
    "@types/jest": "^29.5.2",
    "@types/lodash.merge": "^4.6.7",
    "@types/node": "^20.4.1",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.1",
    "rxjs": "^7.8.1",
    "semantic-release": "^21.0.7",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "type-fest": "^3.13.0",
    "typescript": "^5.1.6",
    "zod": "^3.21.4"
  },
  "peerDependencies": {
    "@nestjs/common": ">= 9.4.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": ">= 6.0.0 < 8",
    "zod": "^3.21.0"
  },
  "packageManager": "pnpm@8.5.1"
}
